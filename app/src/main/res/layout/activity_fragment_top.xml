<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jds.webapp.Fragment.FragmentTop">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow5"
        android:id="@+id/horizontalScrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Fashion"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Cosmetics"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button2" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Travel"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button3" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Beauty"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button4" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Gourmet"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button5" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Goods"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button6" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Life"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button7" />
            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Game and Apps"
                android:textColor="#77FF0014"
                android:background="@drawable/drop_shadow3"
                android:id="@+id/button8" />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffff5774"
        android:layout_gravity="center"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>
