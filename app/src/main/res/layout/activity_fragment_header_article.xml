<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jds.webapp.Fragment.FragmentHeaderArticle">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/drop_shadow3"
        android:id="@+id/linearLayout3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/frameLayout" >


            <ImageView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/matome"
                android:layout_gravity="center"
                android:id="@+id/imageView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/frameShare"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnShare"
                    android:background="@drawable/share"
                    android:layout_gravity="center"
                    android:clickable="true" >
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/frameSave"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnSave"
                    android:background="@drawable/unsave"
                    android:layout_gravity="center"
                    android:clickable="true" >
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffff5774"
        android:layout_gravity="center"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3">


    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>
