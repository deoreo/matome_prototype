<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jds.webapp.Fragment.FragmentHeaderArticle">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/drop_shadow3"
        android:id="@+id/linearLayout3" >

        <FrameLayout
            android:layout_width="208dp"
            android:layout_height="fill_parent"
            android:id="@+id/frameLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#9ce84f63"
                android:layout_gravity="left|center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:text="Matome" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/frameShare"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnShare"
                    android:background="@drawable/share"
                    android:layout_gravity="center"
                    android:clickable="true" >
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/frameSave"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnSave"
                    android:background="@drawable/unsave"
                    android:layout_gravity="center"
                    android:clickable="true" >
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffff5774"
        android:layout_gravity="center"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3">


    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>
